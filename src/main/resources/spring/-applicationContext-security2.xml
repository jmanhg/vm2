    <http
        auto-config="true"
        access-decision-manager-ref="accessDecisionManager"
        access-denied-page="/content/support/err/PageNotFound.jsf">

        
        <intercept-url pattern="/content/restricted/**" access="PERFIL_USER" />
        <intercept-url pattern="/content/fonetico/**" access="PERFIL_FONETICO, PERFIL_FIGURATIVO" />
        <intercept-url pattern="/content/figurativo/**" access="PERFIL_FONETICO, PERFIL_FIGURATIVO" />
        <intercept-url pattern="/content/supervisor/**" access="PERFIL_SUPERVISOR" />
        <intercept-url pattern="/content/admin/users/**" access="PERFIL_ADMIN" />
        
         
        <form-login
            login-processing-url="/j_spring_security_check"
            login-page="/content/common/login.jsf"
            authentication-success-handler-ref="loginSuccessHandler"
            authentication-failure-handler-ref="loginFailureHandler" />

        <logout
            logout-url="/j_spring_security_logout"
            logout-success-url="/content/common/exitoLogout.jsf" />

        <!-- ok 
        <session-management invalid-session-url="/content/common/login.jsf"  />
        -->
        
        <session-management invalid-session-url="/content/common/login.jsf"  >
            <concurrency-control
                   max-sessions="1"
                   error-if-maximum-exceeded="true"
                   expired-url="/content/common/login.jsf"
                   session-registry-alias="sessionRegistry"
                />
	  </session-management>
        <!--
          <security:session-management session-fixation-protection="migrateSession" 
